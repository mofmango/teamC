<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mnu.mapper.LikeMapper">
    <insert id="addLike">
        INSERT INTO TBL_LIKE (bno, userid) VALUES (#{bno}, #{userid})
    </insert>
    <delete id="removeLike">
        DELETE FROM TBL_LIKE WHERE bno = #{bno} AND userid = #{userid}
    </delete>
    <select id="checkLike" resultType="int">
        SELECT COUNT(*) FROM TBL_LIKE WHERE bno = #{bno} AND userid = #{userid}
    </select>
    <delete id="deleteByBno">
	    DELETE FROM TBL_LIKE WHERE bno = #{bno}
	</delete>
</mapper>