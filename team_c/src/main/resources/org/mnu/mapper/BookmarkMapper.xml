<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mnu.mapper.BookmarkMapper">
    <insert id="addBookmark">
        INSERT INTO TBL_BOOKMARK (bno, userid) VALUES (#{bno}, #{userid})
    </insert>
    <delete id="removeBookmark">
        DELETE FROM TBL_BOOKMARK WHERE bno = #{bno} AND userid = #{userid}
    </delete>
    <select id="checkBookmark" resultType="int">
        SELECT COUNT(*) FROM TBL_BOOKMARK WHERE bno = #{bno} AND userid = #{userid}
    </select>

    <delete id="deleteByBno">
        DELETE FROM TBL_BOOKMARK WHERE bno = #{bno}
    </delete>
</mapper>