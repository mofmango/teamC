<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mnu.mapper.TagMapper">

    <insert id="saveTag">
        MERGE INTO TBL_TAG T
        USING (SELECT #{tagName} AS tagName FROM DUAL) D
        ON (T.tagName = D.tagName)
        WHEN NOT MATCHED THEN
            INSERT (tagName) VALUES (#{tagName})
    </insert>

    <insert id="saveRecipeTag">
        INSERT INTO TBL_RECIPE_TAG (bno, tagName) VALUES (#{bno}, #{tagName})
    </insert>

    <select id="getTagsByBno" resultType="string">
        SELECT tagName FROM TBL_RECIPE_TAG WHERE bno = #{bno}
    </select>

    <delete id="deleteRecipeTagsByBno">
        DELETE FROM TBL_RECIPE_TAG WHERE bno = #{bno}
    </delete>

</mapper>